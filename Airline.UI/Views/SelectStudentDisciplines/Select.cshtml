@model Airline_Yurchenko.ViewModels.StudentDisciplinesViewModel

@{
    ViewData["Title"] = "Select";
}

<h1>Select</h1>

<h1> Student @Model.Student.Name</h1>
<div class="container">
    <form asp-action="Select" method="post">
        @foreach (var item in Model.IsChoose)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="IsChoose" value="@item.Id" checked>
                    @item.Title
                </label>
            </div>
        }

        <hr />

        @foreach (var item in Model.NoChoose)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="IsChoose" value="@item.Id">
                    @item.Title
                </label>
            </div>
        }
        <div class="form-group text-center">
            <input type="submit" class="btn btn-info" value="Submit" />
        </div>
        
        <input type="hidden" name="studentId" value="@Model.Student.Id"/>
    </form>
</div>