@model IEnumerable<Airline.DAL.Models.Request>

@{
    ViewData["Title"] = "GetListProblem";
}

<h1 class="text-center">Problem List</h1>
<table class="table table-bordered ">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.SignIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.SignIn)
            </td>
            <td>
                @if (item.Message == null || item.Message.Count() == 0)
                {
                <p class="font-italic">No message</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Message)    
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RequestRef">View</a> 
            </td>
        </tr>
}
    </tbody>
</table>
